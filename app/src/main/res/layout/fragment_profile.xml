<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/abusoft">

    <LinearLayout
            android:id="@+id/satu"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView android:layout_width="0dp"
                                            android:layout_margin="10dp"
                                            android:id="@+id/profil"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">
            <LinearLayout
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView android:layout_width="64dp"
                           android:layout_height="64dp"
                           android:src="@drawable/profildesa"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profil Desa"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:layout_width="0dp"
                                            android:id="@+id/lembaga"
                                            android:layout_weight="1"
                                            android:layout_margin="10dp"
                                            android:layout_height="wrap_content">
            <LinearLayout
                    android:padding="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView android:layout_width="64dp"
                           android:layout_height="64dp"
                           android:src="@drawable/lembaga"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lembaga"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/satu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView android:layout_width="0dp"
                                            android:layout_margin="10dp"
                                            android:id="@+id/datadesa"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">
            <LinearLayout
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView android:layout_width="64dp"
                           android:layout_height="64dp"
                           android:src="@drawable/datadesa"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Desa"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:id="@+id/privacy"
                                            android:layout_margin="10dp"
                                            android:layout_height="wrap_content">
            <LinearLayout
                    android:padding="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView android:layout_width="64dp"
                           android:layout_height="64dp"
                           android:src="@drawable/privasi"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>